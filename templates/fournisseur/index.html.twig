{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}
{% block body %}
<div class="container-fluid mt--7">
<!-- Table -->
<div class="row">
<div class="col">
<div class="card shadow">
<div class="card-header border-0">
<h3 class="mb-0">Fournisseur Table</h3>
</div>
<div class="table-responsive">
<table class="table align-items-center table-flush">
<thead class="thead-light">
    <tr>
        <th>Id</th>
    <th>Nom</th>
    <th>Numero</th>
    <th>Designation</th>
        <th>Statu</th>
    <th>Email</th>
    <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for fournisseur in fournisseurs %}
<tr>
    <td>
        {{ fournisseur.id }}
</td>

<th scope="row">
<div class="media align-items-center">

<div class="media-body">
<span class="mb-0 text-sm">{{ fournisseur.nom }}</span>
</div>
</div>
</th>

<td>
<span class="badge badge-dot mr-4">
    {{ fournisseur.Numero }}
</span>
</td>
<td>
<span class="badge badge-dot mr-4">
    {{ fournisseur.Designation }}
</span>
</td>
    <span class="badge badge-dot mr-4">
    {% if fournisseur.Statu == 0 %}
        <td><label class="badge badge-warning">En cours</label></td>
    {% elseif fournisseur.Statu == 1 %}
        <td><label class="badge badge-success">validé</label></td>
    {% else %}
        <td><label class="badge badge-danger">Refusé</label></td>
    {% endif %}
    <td>
<span class="badge badge-dot mr-4">
    {{ fournisseur.Email }}
</span>
    </td>
<td>



</span>
</td>

</td>

<td >
<a href="{{ path('fournisseur_edit', {'id': fournisseur.id}) }}">edit</a>
    </td>
    </tr>
{% endfor %}


</tbody>
</table>
</div>
<div class="card-footer py-4">
<nav aria-label="...">
