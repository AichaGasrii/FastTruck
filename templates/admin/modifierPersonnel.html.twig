{% extends 'admin/index.html.twig' %}
{% block body %}

    <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
            <div class="card z-index-0">
                <div class="card-header text-center pt-4">
                    <h5>Register with</h5>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_widget(form.nom, {'attr':{'class':'form-control', 'placeholder':'Nom'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>


                    <div class="mb-3">
                        {{ form_widget(form.prenom, {'attr':{'class':'form-control', 'placeholder':'Prenom'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>


                    <div class="mb-3">
                        {{ form_widget(form.email, {'attr':{'class':'form-control', 'placeholder':'Email'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_widget(form.salaire, {'attr':{'class':'form-control', 'placeholder':'Salaire'}}) }}
                        {{ form_errors(form.salaire) }}
                    </div>


                    <div class="mb-3">
                        {{ form_widget(form.role, {'attr':{'class':'form-control', 'placeholder':'Role'}}) }}
                        {{ form_errors(form.role) }}
                    </div>


                    <div class="mb-3">
                        {{ form_widget(form.nbre_heures, {'attr':{'class':'form-control', 'placeholder':'Nombre heures'}}) }}
                        {{ form_errors(form.nbre_heures) }}
                    </div>


                    <div class="mb-3">
                        {{ form_widget(form.matricule_truck, {'attr':{'class':'form-control', 'placeholder':'Matricule truck'}}) }}
                        {{ form_errors(form.matricule_truck) }}
                    </div>


                    <div class="mb-3">
                        {{ form_widget(form.password, {'attr':{'class':'form-control', 'placeholder':'Mot de passe'}}, {label: 'Password'}) }}
                        {{ form_errors(form.password) }}
                    </div>
                    <div class="btn-block text-center">
                        {{ form_widget(form.Modifier) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}